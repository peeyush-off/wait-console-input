{
    "extends": "airbnb-base/legacy",
    "rules": {
    "indent": "off",
    "no-var": "error",
    "no-multi-assign": "off",
    "no-tabs": "off",
    "indent-legacy": "off",
    "no-constant-condition": "off",
    "no-empty": "warn",
    "no-plusplus": "off",
    "no-restricted-globals": "off",
    "no-trailing-spaces": "off",
    "brace-style": "off",
    "no-else-return": "off",
    "consistent-return": "off",
    "no-param-reassign": "off",
    "max-len": [1, 150, 4],
    "one-var-declaration-per-line": "off",
    "one-var": "off",
    "no-unused-expressions": "off",
    "no-continue": "off"
    },
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module"
    },
    "env": {
        "node": true
    }
}